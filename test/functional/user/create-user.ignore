'use strict'

const Factory = use('Factory')
const { test, trait } = use('Test/Suite')('Create User')

trait('Test/ApiClient')
trait('Auth/Client')

test('can create a User if valid data', async ({ assert, client }) => {

  const course = await Factory.model('App/Models/Course').make()
  const bond = await Factory.model('App/Models/Bond').make()

  const { name, email, cpf, password, vinculo_id, curso_id } = await Factory.model(
    'App/Models/User'
  ).make()

  const data = {
    name,
    email,
    cpf,
    password,
    bond_id: bond.id,
    course_id: course.id
  }

  const response = await client
    .post('/api/users')
    .send(data)
    .end()

  response.assertStatus(201)

  response.assertJSONSubset({
    name: data.name,
    email: data.email,
    cpf: data.cpf,
    password: data.password, //encrypted
    bond_id: data.bond_id,
    course_id: data.course_id

  })
})

